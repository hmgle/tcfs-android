<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startrun"
        android:id="@+id/switch1"
        android:layout_marginTop="51dp"
        android:onClick="runTcfs"
        android:checked="false"
        android:layout_below="@+id/tcfskey"
        android:layout_toRightOf="@+id/tcfsdir"
        android:layout_toEndOf="@+id/tcfsdir" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tcfsdir"
        android:hint="dit to share"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="dir to share" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tcfsport"
        android:layout_below="@+id/tcfsdir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="port to listen"
        android:text="port to listen" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tcfskey"
        android:hint="key"
        android:layout_below="@+id/tcfsport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wifiip"
        android:layout_below="@+id/tcfskey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="wifi Ipaddr" />
</RelativeLayout>
